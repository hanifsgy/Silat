<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="left">
        <ImageView
            android:id="@+id/photoMahasiswa"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/mahasiswa"/>
        <TextView
            android:id="@+id/nama"
            android:layout_toRightOf="@+id/photoMahasiswa"
            android:text="Muhammad Rifqi Aljabar "
            android:textSize="14sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/nama"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/photoMahasiswa"
            android:gravity="center"
            android:text="Mahasiswa Ilmu Keolahragaan Universitas Negeri Yogyakarta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <ScrollView
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/mahasiswa_konten"
                />


        </LinearLayout>


    </ScrollView>

</LinearLayout>